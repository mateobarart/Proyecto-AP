@model MVC.Models.Competicion

@{
    ViewBag.Title = "Eliminar competición";
}

<h2 class="text-center">Delete</h2>

<h3 class="text-center">¿Está seguro que desea eliminar la competición?</h3> 
<h5 class="text-center">Se eliminaran todos los partidos asignados a esta competición</h5>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NombreCompeticion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NombreCompeticion)
        </dd>
    </dl>
    @Html.ValidationMessage("DeleteIncorrecto", "", new { @class = "text-danger" })

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            @Html.ActionLink("Volver al listado", "Index")
        </div>
    }
</div>
