@model IEnumerable<MVC.Models.Competicion>

@{
    ViewBag.Title = "Competiciones";
}

<h2 class="text-center">Competiciones</h2>

<p class="btn btn-default">
    @Html.ActionLink("Crear", "Create")
</p>
@if (Model.Count() > 0)
{ 
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreCompeticion)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreCompeticion)
                </td>
                <td>
                    @Html.ActionLink("Ediciones", "VerEdiciones", new { id = item.IdCompeticion }) |
                    @Html.ActionLink("Editar", "Edit", new { id = item.IdCompeticion }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.IdCompeticion })
                </td>
            </tr>
        }

    </table>
}