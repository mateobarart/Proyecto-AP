@model MVC.Models.Indisponibilidad

@{
    ViewBag.Title = "Crear indisponibilidad";
}

<h2 class="text-center">Crear indisponibilidad</h2>

@Html.ValidationMessage("Create", "", new { @class = "text-danger" })

<ul class="nav nav-tabs">
    <li class="active">
        <a class="nav-link active" id="Recurrente" data-toggle="tab" onclick="RenderCrearIndisponibilidad(1)">Recurrente</a>
    </li>
    <li class="nav-item">
        <a id="Unica" class="nav-link" data-toggle="tab" onclick="RenderCrearIndisponibilidad(2)">Única</a>
    </li>
</ul>

<div class="form-horizontal">
    <hr />
    <span class="text-danger col-md-4">@ViewBag.ErrorIndisponibilidad</span>
    <div class="row" hidden="hidden" id="divsCrearRecurrente" data-backdrop="false">
        @Html.Partial("CreateRecurrente", Model)
    </div>
    <div class="row" hidden="hidden" id="divsCrearUnica" data-backdrop="false">
        @Html.Partial("CreateUnica", Model)
    </div>


</div>


<script type="text/javascript">
    function RenderCrearIndisponibilidad(id) {
        if (id == 1) {
            $("#divsCrearUnica").modal('hide');
            $("#divsCrearRecurrente").modal('show');

        } else if (id == 2) {
            $("#divsCrearRecurrente").modal('hide');
            $("#divsCrearUnica").modal('show');
        }
    }

</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
