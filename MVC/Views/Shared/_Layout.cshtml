<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Smart Rota</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SMART ROTA", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @if (Session["mailUsuarioLogueado"] != null && Session["tipoUsuarioLogueado"].ToString().Equals("Analista"))
                {
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Partidos", "Index", "Home")</li>

                    <li>
                        @Html.ActionLink(
                       linkText: "Indisponibilidades",
                       actionName: "IndisponibilidadesUsuario",
                       controllerName: "Indisponibilidades",
                       routeValues: new { id = Session["idUsuarioLogueado"] },
                       htmlAttributes: null)
                    </li>
                </ul>
                }
                else if (Session["mailUsuarioLogueado"] != null)
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Usuarios", "Index", "Usuarios")</li>
                        <li>@Html.ActionLink("Equipos", "Index", "Equipos")</li>
                        <li>@Html.ActionLink("Competiciones", "Index", "Competiciones")</li>
                        <li>@Html.ActionLink("Partidos", "Index", "Partidos")</li>
                        <li>@Html.ActionLink("Indisponibilidades", "Index", "Indisponibilidades")</li>
                        <li>@Html.ActionLink("Ranking", "Ranking", "Usuarios")</li>
                    </ul>
                }
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Smart Rota</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
