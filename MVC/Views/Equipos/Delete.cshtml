@model MVC.Models.Equipo

@{
    ViewBag.Title = "Eliminar equipo";
}

<h2 class="text-center">Eliminar</h2>

<h3 class="text-center">¿Está seguro que desea eliminar el equipo?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NombreEquipo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NombreEquipo)
        </dd>

    </dl>
    @Html.ValidationMessage("DeleteIncorrecto", "", new { @class = "text-danger" })

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            @Html.ActionLink("Volver al listado", "Index")
        </div>
    }
</div>
